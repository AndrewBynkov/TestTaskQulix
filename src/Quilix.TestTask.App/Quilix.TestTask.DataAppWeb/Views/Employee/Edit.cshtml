                    title="1. Разработчик 2. Тестировщик 3. Бизнес-аналитик 4. Менеджер">
                Info
            </button>
            <label asp-for="Position" class="control-label"></label>
            <input asp-for="Position" class="form-control" type="number" min="1" max="4" />
            <span asp-validation-for="Position" class="text-danger"></span>*@
            </div>
            <div class="dropdown">
                @Html.DropDownListFor(model => model.CompanyId, ViewBag.Companies as SelectList)
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
